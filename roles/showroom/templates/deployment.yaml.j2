apiVersion: apps/v1
kind: Deployment
metadata:
  name: showroom
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: showroom
  template:
    metadata:
      labels:
        app.kubernetes.io/name: showroom
    spec:
      containers:
      - name: nginx
        image: quay.io/rhpds/nginx:1.25
        env:
        - name: NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        ports:
        - containerPort: 8080
          name: web
          protocol: TCP
        volumeMounts:
        - mountPath: /etc/nginx/nginx.conf
          name: nginx-config
          subPath: nginx.conf
        - mountPath: /data/www
          name: content
        - mountPath: /var/cache/nginx
          name: nginx-cache
        - mountPath: /var/run
          name: nginx-pid
      - name: content
        image: ghcr.io/rhpds/showroom-content:latest
        env:
        - name: GIT_REPO_URL
          value: https://github.com/rhpds/openshift-virt-roadshow-cnv-multi-user
        - name: GIT_REPO_REF
          value: network
        - name: ANTORA_PLAYBOOK
          value: default-site.yml
        ports:
        - containerPort: 8000
          protocol: TCP
        livenessProbe:
          httpGet:
            path: /
            port: 8000
            scheme: HTTP
        readinessProbe:
          httpGet:
            path: /
            port: 8000
            scheme: HTTP
        volumeMounts:
        - mountPath: /user_data/
          name: user-data
        - mountPath: /showroom/
          name: showroom
      - name: terminal
        image: quay.io/rhpds/openshift-showroom-terminal-ocp:latest
        env:
        - name: NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        - name: GUID
          value: nntdd
        ports:
        - containerPort: 7681
          protocol: TCP
        resources:
          limits:
            cpu: 500m
            memory: 1Gi
          requests:
            cpu: 50m
            memory: 256Mi
        volumeMounts:
        - mountPath: /home/lab-user
          name: terminal-lab-user-home
      serviceAccount: showroom
      serviceAccountName: showroom
      volumes:
      - emptyDir: {}
        name: showroom
      - configMap:
          defaultMode: 420
          name: showroom-userdata
        name: user-data
      - configMap:
          defaultMode: 420
          name: showroom-index
        name: content
      - configMap:
          defaultMode: 420
          name: showroom-proxy-config
        name: nginx-config
      - emptyDir: {}
        name: nginx-pid
      - emptyDir: {}
        name: nginx-cache
      - name: terminal-lab-user-home
        persistentVolumeClaim:
          claimName: showroom-terminal-lab-user-home
